{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "../dist-electron",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": true,
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "**/__tests__/**", "**/*.test.ts", "**/*.spec.ts", "assets/**"]
}
